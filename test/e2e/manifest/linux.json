{
    "apiVersion": "vlabs",
    "location": "westus2",
    "properties": {
        "orchestratorProfile": {
            "orchestratorType": "Kubernetes",
            "orchestratorRelease": "1.17",
            "kubernetesConfig": {
                "useCloudControllerManager": true,
                "networkPolicy": "none",
                "cloudProviderRateLimitQPS": 6,
                "cloudProviderRateLimitBucket": 20,
                "controllerManagerConfig": {
                    "--feature-gates": "CSIInlineVolume=true,LocalStorageCapacityIsolation=true,ServiceNodeExclusion=true"
                },
                "apiServerConfig": {
                    "--enable-admission-plugins": "NamespaceLifecycle,LimitRanger,ServiceAccount,DefaultStorageClass,ResourceQuota,AlwaysPullImages"
                },
                "addons": [
                    {
                        "name": "azuredisk-csi-driver",
                        "enabled": false
                    },
                    {
                        "name": "azurefile-csi-driver",
                        "enabled": false
                    }
                ]
            }
        },
        "masterProfile": {
            "count": 1,
            "dnsPrefix": "{dnsPrefix}",
            "vmSize": "Standard_DS2_v2",
            "distro": "aks-ubuntu-18.04"
        },
        "agentPoolProfiles": [
            {
                "name": "agentpool1",
                "count": 2,
                "vmSize": "Standard_DS2_v2",
                "distro": "aks-ubuntu-18.04",
                "availabilityProfile": "AvailabilitySet"
            }
        ],
        "linuxProfile": {
            "adminUsername": "azureuser",
            "ssh": {
                "publicKeys": [
                    {
                        "keyData": "{keyData}"
                    }
                ]
            }
        },
        "servicePrincipalProfile": {
            "clientID": "{clientID}",
            "secret": "{secret}"
        }
    }
}
